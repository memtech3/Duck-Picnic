{% set logo = theme_var('custom_logo') %} {% set logo_file = (logo|first).name %}

<div style="{% if header.appearance.textcolor %}color:{{header.appearance.textcolor}};{%endif%}height:{{header.appearance.height}}vh;background-color:{{header.appearance.backgroundcolor}}" class="landing-feature">
  {% if header.content.backgroundvideo %}
  <div style="height:{{header.appearance.height}}vh;" class="background">
    <video class="media" preload="metadata" autoplay loop muted>
      <source src="{{header.content.backgroundvideo}}" type="video/mp4">
    </video>
  <div style="background:{{header.appearance.backgroundcolor}};opacity:{{ header.appearance.opacity/100 }};height:{{header.appearance.height}}vh;" class="overlay"></div>
  </div>
  {% endif %}
  <div class="content flex one two-1000 grow">
    {% if header.noimage == false %}
    <div><img class="logo" src="{{ url('theme://images/logo/' ~ logo_file)  }}" alt=""></div>
    {% endif %}
    <div>
      <article style="max-width:750px" class="card">
        <header>
          <h>{% if header.content.header %} {{header.content.header}} {% else %}{{ site.title }}{% endif %}</h>
        </header>
        <p>{{ header.content.body|markdown }}</p>
        <div class="flex">
        {% for row in header.rows %}
        <div style="padding-left:12.5%; padding-right:12.5%;" class="flex center">
          {% for button in row.buttons %}
          <a href="{{ button.link }}" style="{% if button.customcolor %}background:{{button.customcolor}};{% endif %}" class="button {{button.color}}">{{ button.text }}</a>&nbsp;
          {% endfor %}
        </div>
        {% endfor %}
      </article>
    </div>
  </div>
  <br>
</div>